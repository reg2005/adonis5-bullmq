{
  "name": "adonis5-bullmq",
  "version": "2.2.0",
  "description": "Adonis 5 bullmq provider",
  "main": "build/index.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "clean": "del build",
    "copy:files": "cpx 'templates/**' 'build/templates'",
    "compile": "npm run lint && npm run clean && tsc && npm run copy:files",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json reg2005/adonis5-bullmq"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reg2005/adonis5-bullmq.git"
  },
  "keywords": [
    "adonis",
    "bullmq"
  ],
  "author": "Evgeniy Ryumin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reg2005/adonis5-bullmq/issues"
  },
  "homepage": "https://github.com/reg2005/adonis5-bullmq#readme",
  "devDependencies": {
    "@adonisjs/assembler": "^5.8.1",
    "@adonisjs/config": "^3.0.8",
    "@adonisjs/core": "^5.8.6",
    "@adonisjs/fold": "^8.2.0",
    "@adonisjs/logger": "^4.1.4",
    "@adonisjs/mrm-preset": "^3.0.0",
    "@adonisjs/require-ts": "^2.0.12",
    "@types/node": "^14.14.25",
    "commitizen": "^4.2.5",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^3.0.1",
    "doctoc": "^2.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-adonis": "^1.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "github-label-sync": "^2.2.0",
    "husky": "^4.3.8",
    "japa": "^3.1.1",
    "mrm": "^2.5.15",
    "np": "^7.6.2",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.7.1",
    "ts-mockito": "^2.6.1",
    "typescript": "^4.6.3"
  },
  "types": "build/adonis-typings/index.d.ts",
  "typings": "build/adonis-typings/index.d.ts",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/src",
    "build/index.d.ts",
    "build/index.js",
    "build/templates"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "dependencies": {
    "bullmq": "^1.78.2"
  },
  "adonisjs": {
    "types": "adonis5-bullmq",
    "providers": [
      "adonis5-bullmq"
    ],
    "env": {
      "BULLMQ_REDIS_HOST": "127.0.0.1",
      "BULLMQ_REDIS_PORT": 6379,
      "BULLMQ_REDIS_PASSWORD": ""
    },
    "templates": {
      "basePath": "./build/templates",
      "config": [
        {
          "src": "config.txt",
          "dest": "bullmq"
        }
      ]
    }
  }
}
